{
  "name": "nisshin-refine",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "dev": "bun run --filter '*' dev",
    "generate:api-types": "bun run --cwd packages/api-types generate:status",
    "lint": "oxlint .",
    "test": "bun run --filter '*' test",
    "typecheck": "bun run --filter '*' typecheck"
  },
  "devDependencies": {
    "oxlint": "^1.16.0"
  }
}
