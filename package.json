{
  "name": "nisshin-refine",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "dev": "bun run --filter '*' dev",
    "generate:api-types": "bun run --cwd packages/api-types generate:status",
    "skills:sync": "sh scripts/codex/sync-skills.sh",
    "mcp:setup": "sh scripts/codex/setup-mcp.sh",
    "mcp:verify": "sh scripts/codex/setup-mcp.sh --verify",
    "hooks:install": "sh scripts/codex/install-hooks.sh",
    "hooks:verify": "sh scripts/codex/install-hooks.sh --verify",
    "lint": "oxlint .",
    "check:staged": "sh scripts/codex/check-staged.sh",
    "check:prepush": "sh scripts/codex/check-prepush.sh",
    "check:generated:clean": "sh scripts/codex/check-generated-clean.sh",
    "test": "bun run --filter '*' test",
    "typecheck": "bun run --filter '*' typecheck"
  },
  "devDependencies": {
    "oxlint": "^1.16.0"
  }
}
